    <%= javascript_pack_tag( "venue_display",
        "data-turbo-track": "reload" ) %>
  </head>
  <body>
    <section>
      <%= render "layouts/nav" %>
      <div class="container mx-auto">
        <div class="mt-6">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
    <main class="container mx-auto mt-28 px-5 flex">
            <%= yield %>
    </main>
        </div>
      </div>
    </section>
  </body>
